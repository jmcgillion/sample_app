<%= render 'shared/nav_bar_main' %>

<%= render 'to_posts_bar' %>

<%= render 'nav_second' %>


<div class='container' style='padding-top: 5em'>
    <div class='row'>
      <div class='span0 col-lg-2'>
      <% current_user.folders.each do |folder| %>
        <% if folder.is_root? %>
          <% folder.children.each do |child| %>
            <%= link_to child, folder_path(child), class: "btn btn-small" %>
          <% end %>
        <% else %>
            <% folder.descendants.each do |desc| %>
              <%= link_to descendant, folder_path(desc), class: 'btn btn-small' %>
            <% end %>
        <% end %>
        </div>
      </div>
      <div class='col-lg-9 col-lg-offset-1'>
            <table class='table table-striped table-hover'>
              <tr><% @folder.notes.each do |note| %>
                    <th><%= note.subject %></th>
                     <th><%= note.body %></th>
                     <th><%= display_datetime(note.created_at)%></th> 
              </tr>
              <% end %>
            </table>
        </div>
    </div>
</div>

